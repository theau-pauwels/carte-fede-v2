---
import Layout from "@layouts/Layout.astro";
import Carte from "../../components/carte"; // adapte le chemin selon ton arborescence
---

<Layout title="Admin">
  <main class="flex-1 flex flex-col gap-4 items-center p-4 justify-center">
    <section class="w-full max-w-md">
      <!-- Tu peux déplacer ces meta dans le Layout si tu préfères -->
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1" />

      <style>
        form { max-width: 520px; display: grid; gap: .75rem; margin-top: 1rem; }
        input, select, button { padding: .6rem .8rem; font-size: 1rem; }
        .row { display: grid; grid-template-columns: 1fr 1fr; gap: 0.5rem; }
        .bar { display:flex; gap:.75rem; align-items:center; }
        .ok { color: #0a7; }
        .err { color: #b00020; }
        .muted { color:#666; font-size:.9rem; }
        a.btn { display:inline-block; padding:.4rem .6rem; border:1px solid #ddd; border-radius:.5rem; }
      </style>
      <style global>
      .muted { color:#666; font-size:.9rem; }
      .row { display: grid; grid-template-columns: 1fr 1fr; gap: 0.5rem; }
      .ok { color:#0a7; }
      .err { color:#b00020; }
      </style>


      <h1 class="font-semibold text-2xl text-blue-800 bg-white mb-1">Créer un utilisateur</h1>
      <p class="muted">
        Renseigner <strong>member_id (6 chiffres du matricule UMONS)</strong> OU <strong>email</strong>.
      </p>

      <!-- Composant React hydraté côté client -->
      <Carte client:load />
    </section>
  </main>
</Layout>
